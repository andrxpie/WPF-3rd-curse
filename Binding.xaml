<Window x:Class="WPF_repeat.Binding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_repeat"
        mc:Ignorable="d"
        Title="Binding" Height="450" Width="450" FontFamily="Cascadia code" FontSize="20">
    <StackPanel>
        <TextBlock TextAlignment="Center" FontSize="20">Bindings</TextBlock>
        <Slider x:Name="slider" ValueChanged="Slider_ValueChanged" Margin="5" Maximum="100"/>
        <ProgressBar Value="{Binding ElementName=slider, Path=Value}" Margin="5" Height="10"/>
        <TextBlock Margin="5"></TextBlock>
    </StackPanel>
</Window>
